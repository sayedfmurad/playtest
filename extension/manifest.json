{
  "manifest_version": 3,
  "name": "Playtest",
  "version": "0.0.2",
  "description": "A test automation tool that lets users create and run tests in the extension UI, connecting to a backend Playwright instance for browser automation.",
  "action": {
    "default_title": "Playtest"
  },
  "background": { "service_worker": "background.js" },
  "permissions": ["tabs", "storage", "windows"],
  "host_permissions": ["http://127.0.0.1:8000/*", "ws://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "ExtensionWebSocket.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
