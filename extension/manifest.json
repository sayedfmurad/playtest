{
  "manifest_version": 3,
  "name": "Quick WebSocket to Local API",
  "version": "0.0.2",
  "description": "Connects to a local Python API via WebSocket for real-time communication.",
  "host_permissions": ["http://127.0.0.1:8000/*", "ws://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ExtensionWebSocket.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
